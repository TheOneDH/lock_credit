{
  "name": "mcp-sender",
  "displayName": "MCP Sender",
  "description": "Send content via MCP with input box and submit button",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mcp-sender.openPanel",
        "title": "MCP Sender: Open Panel"
      },
      {
        "command": "mcp-sender.setupKiro",
        "title": "MCP Sender: Setup Kiro Config"
      },
      {
        "command": "mcp-sender.setupWindsurf",
        "title": "MCP Sender: Setup Windsurf Config"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mcp-sender",
          "title": "MCP Sender",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "mcp-sender": [
        {
          "type": "webview",
          "id": "mcp-sender.inputView",
          "name": "Send Message"
        }
      ]
    },
    "configuration": {
      "title": "MCP Sender",
      "properties": {
        "mcp-sender.serverPort": {
          "type": "number",
          "default": 9876,
          "description": "MCP Server port"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {}
}
